[
  {
    "name": "meilisearch",
    "image": "getmeili/meilisearch:v0.14.0",
    "cpu": 512,
    "memory": 1024,
    "essential": true,
    "portMappings": [
      {
        "containerPort": 7700,
        "hostPort": 7700
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "meilisearch"
      }
    },
    "mountPoints": [
      {
        "containerPath": "/data.ms",
        "sourceVolume": "data"
      }
    ]
  }
]